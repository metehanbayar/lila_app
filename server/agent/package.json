{
  "name": "lila-group-printer-agent",
  "version": "1.0.0",
  "description": "Windows Agent - Otomatik Fiş Yazdırma Servisi",
  "main": "agent.js",
  "type": "module",
  "scripts": {
    "start": "node agent.js",
    "setup": "node setup.js",
    "install-service": "node install-service.js",
    "uninstall-service": "node uninstall-service.js",
    "build": "pkg . --targets node18-win-x64 --output dist/LilaGroupPrinterAgent.exe"
  },
  "bin": "agent.js",
  "pkg": {
    "assets": [
      "config.json",
      "node_modules/**/*"
    ],
    "outputPath": "dist"
  },
  "keywords": [
    "printer",
    "receipt",
    "pos",
    "thermal-printer"
  ],
  "author": "Lila Group",
  "license": "MIT",
  "dependencies": {
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4",
    "node-windows": "^1.0.0-beta.8",
    "socket.io-client": "^4.7.2",
    "usb": "^2.11.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}

