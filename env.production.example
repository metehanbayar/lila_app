# Production Environment Configuration
# CentOS Plesk VDS için hazırlanmış konfigürasyon

# Database Configuration
DB_SERVER=your-mssql-server.com
DB_PORT=1433
DB_DATABASE=LilaGroupMenu
DB_USER=your-username
DB_PASSWORD=your-password
DB_ENCRYPT=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# SMS Configuration (Opsiyonel)
SMS_API_KEY=your-sms-api-key
SMS_ENABLED=false

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Environment
NODE_ENV=production
PORT=3000
CORS_ORIGIN=https://yourdomain.com

# File Upload
UPLOAD_PATH=/var/www/vhosts/yourdomain.com/httpdocs/server/uploads
MAX_FILE_SIZE=52428800

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.IO
SOCKET_CORS_ORIGIN=https://yourdomain.com

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/pm2/lila-group-menu.log

# Security
HELMET_ENABLED=true
TRUST_PROXY=true

# Printer Agent (Opsiyonel)
PRINTER_AGENT_ENABLED=false
PRINTER_AGENT_PORT=3001

# Backup (Opsiyonel)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
